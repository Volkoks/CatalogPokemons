<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PokemonFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pokemon_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/primary_light"
        android:shadowColor="@color/purple_200"
        android:text="Pokemon name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintCircleRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_pokemon_iv"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_name_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/base_experience_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="base_experience"
        app:layout_constraintStart_toEndOf="@+id/image_pokemon_iv"
        app:layout_constraintTop_toTopOf="@+id/image_pokemon_iv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/height_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="height"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/base_experience_tv"
        app:layout_constraintTop_toBottomOf="@+id/base_experience_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="weight"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/base_experience_tv"
        app:layout_constraintTop_toBottomOf="@+id/height_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>