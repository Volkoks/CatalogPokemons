<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpure_light"
    tools:context=".ui.fragments.PokemonFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_favorit_pokemon_iv"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/base_experience_favorit_pokemon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="base_experience"
        app:layout_constraintStart_toEndOf="@+id/image_favorit_pokemon_iv"
        app:layout_constraintTop_toTopOf="@+id/image_favorit_pokemon_iv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/height_favorit_pokemon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="height"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/base_experience_favorit_pokemon_tv"
        app:layout_constraintTop_toBottomOf="@+id/base_experience_favorit_pokemon_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weight_favorit_pokemon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="weight"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/base_experience_favorit_pokemon_tv"
        app:layout_constraintTop_toBottomOf="@+id/height_favorit_pokemon_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>